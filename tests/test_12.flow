var i: int = 0;

loop {
    i += 1;
    if (i > 3) {
        stop; # Debería salir aquí
    }
    print(i);
}

# Resultado
#
# 1
# 2
# 3

loop (var x: int = 0; x < 5; x += 1) {
    if (x == 2) {
        next; # Salta a x+=1, no imprime el 2
    }
    print(x);
}

# Resultado
#
# 0
# 1
# 3
# 4

var outer: int = 1;
var inner: int;

loop (outer <= 3) {
    print(outer * 100); # Marca bucle externo (100, 200, 300)
    
    # Bucle interno: imprime 1 y 2, hace stop en 3
    loop (inner = 1; inner < 10; inner += 1) {
        if (inner == 3) {
            stop; # Esto debe salir SOLO del loop 'inner'
        }
        print(inner);
    }
    
    outer += 1;
}

# Resultado
#
# 100
# 1
# 2
# 200
# 1
# 2
# 300
# 1
# 2
